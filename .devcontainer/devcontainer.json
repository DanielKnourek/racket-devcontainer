{
	"name": "racket-devcontainer",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"COUNTRY": "Germany"
		}
	},
	// Set *default* container specific settings.json values on container create.
	"customizations": {
		"vscode": {
			"settings": {
				// "magic-racket.lsp.enabled": true,
				// "magicRacket.languageServer.command": "xvfb-racket",
				// "magicRacket.general.racketPath": "xvfb-racket",
				"magicRacket.languageServer.command": "xvfb-run",
				"magicRacket.languageServer.arguments": [
					"--auto-servernum",
					"racket",
					"--lib",
					"racket-langserver",
					"$@"
				],
			},
			"extensions": [
				"letrieu.expand-region",
				"eamodio.gitlens",
				"evzen-wybitul.magic-racket",
				"shaunlebron.vscode-parinfer"
			]
		}
	},
	// Add the IDs of extensions you want installed when the container is created.
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "",
	// Comment out connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	// "remoteUser": "vscode"
	// "mounts": [
	// 	"source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached"
	// ]
}